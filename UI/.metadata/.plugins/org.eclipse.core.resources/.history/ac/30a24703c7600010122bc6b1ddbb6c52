package gherardi.samuel;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;


import static org.junit.jupiter.api.Assertions.assertNotNull;

import java.time.Duration;

public class MainViewSeleniumTest {

    private WebDriver driver;

    @BeforeEach
    void setup() {
        System.out.println("üîß Setup Selenium");
        System.setProperty("webdriver.chrome.driver", "C:\\Program Files\\chromedriver-win64\\chromedriver.exe");
        driver = new ChromeDriver();
        driver.get("http://localhost:8080"); // Assicurati che l'app sia in esecuzione
    }

    @Test
    void cambiaModalitaTest() {
        System.out.println("üöÄ Test avviato");

        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));

        // üîê Login
        WebElement usernameField = wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("username")));
        WebElement passwordField = driver.findElement(By.id("password"));
        WebElement loginButton = driver.findElement(By.tagName("button"));

        usernameField.sendKeys("admin"); // cambia se il nome utente √® diverso
        passwordField.sendKeys("123"); // cambia se la password √® diversa
        loginButton.click();

        // ‚úÖ Dopo il login, accedi al pulsante "Cambia modalit√†"
        WebElement button = wait.until(ExpectedConditions.elementToBeClickable(
            By.xpath("//button[contains(text(), 'Cambia modalit√†')]")));
        button.click();

        WebElement label = wait.until(ExpectedConditions.visibilityOfElementLocated(
            By.xpath("//*[contains(text(),'Modalit√† attuale: MANUALE')]")));
        assertNotNull(label);

        System.out.println("‚úÖ Test completato con successo!");
    }


    @AfterEach
    void teardown() {
        System.out.println("üßπ Chiudo browser");
        if (driver != null) {
            driver.quit();
        }
    }
}
