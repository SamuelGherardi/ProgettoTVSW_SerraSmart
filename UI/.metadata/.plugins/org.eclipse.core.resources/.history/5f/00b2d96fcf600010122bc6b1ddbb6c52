package gherardi.samuel;
import org.junit.jupiter.api.*;
import org.openqa.selenium.*;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.openqa.selenium.JavascriptExecutor;

import static org.junit.jupiter.api.Assertions.*;

import java.time.Duration;

public class MainViewSeleniumTest {
    private WebDriver driver;

    @BeforeEach
    void setup() {
        System.out.println("ðŸ”§ Setup Selenium");
        System.setProperty("webdriver.chrome.driver", "C:\\Program Files\\chromedriver-win64\\chromedriver.exe");
        driver = new ChromeDriver();
        driver.get("http://localhost:8080");
    }

    @Test
    void cambiaModalitaTest() {
        System.out.println("ðŸš€ Avvio test Selenium");

        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(15));

        // ðŸŸ¡ Aspetta che la pagina contenga un campo input (username)
        WebElement usernameField = wait.until(ExpectedConditions.visibilityOfElementLocated(
            By.cssSelector("input[type='text']")));

        WebElement passwordField = driver.findElement(By.cssSelector("input[type='password']"));
        WebElement loginBtn = driver.findElement(By.tagName("vaadin-button"));

        usernameField.sendKeys("admin");
        passwordField.sendKeys("123");
        loginBtn.click();

        // âœ… Attendi la dashboard e clicca il pulsante "Cambia modalitÃ "
        WebElement toggleButton = wait.until(ExpectedConditions.elementToBeClickable(
        	    By.cssSelector("vaadin-button span")));

        if (toggleButton.getText().contains("Cambia modalitÃ ")) {
            toggleButton.click();
        }


        WebElement label = wait.until(ExpectedConditions.visibilityOfElementLocated(
            By.xpath("//*[contains(text(),'ModalitÃ  attuale: MANUALE')]")));
        assertNotNull(label);

        System.out.println("âœ… Login e cambio modalitÃ  riusciti!");
    }



    @AfterEach
    void teardown() {
        System.out.println("ðŸ§¹ Chiudo browser");
        if (driver != null) {
            driver.quit();
        }
    }
}
